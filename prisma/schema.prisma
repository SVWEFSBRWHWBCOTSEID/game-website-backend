datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

model Game {
    id                  String      @id @default(uuid())
    createdAt           DateTime    @default(now())
    rated               Boolean
    gameKey             String
    clockInitial        Int?
    clockIncrement      Int?
    firstUsername       String?
    secondUsername      String?
    rating              Int
    ratingMin           Int
    ratingMax           Int
    startPos            String?
    moves               String
    firstTime           Int?
    secondTime          Int?
    status              String
}

model User {
    username        String      @unique
    createdAt       DateTime    @default(now())
    password        String
    perfs           String
    country         String
    location        String
    bio             String
    firstName       String
    lastName        String
    url             String
    playing         String?
}
