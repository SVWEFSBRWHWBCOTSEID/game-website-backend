datasource db {
    provider = "postgresql"
    url      = "postgres://kepler:gamingdb11@localhost:5432/game-db"
}

generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

model Game {
    id                  String      @id @default(uuid())
    createdAt           DateTime    @default(now())
    rated               Boolean
    gameKey             String
    gameName            String
    clockInitial        Int?
    clockIncrement      Int?
    firstName           String?
    firstProvisional    Boolean?
    firstRating         Int?
    secondName          String?
    secondProvisional   Boolean?
    secondRating        Int?
    ratingMin           Int
    ratingMax           Int
    startPos            String
    moves               String
    firstTime           Int?
    secondTime          Int?
    status              GameStatus
}

enum GameStatus {
    WAITING
    STARTED
}

enum Side {
    FIRST
    SECOND
    RANDOM
}
